ul,
ol
  margin 0
  padding 0
  list-style-position inside

ul
  list-style-type disc

b,
strong,
  font-weight bold

i,
em,
  font-style italic

ins
  text-decoration none

del
  text-decoration line-through

hr
  border-bottom none
  border-top 1px dotted c-black
  max-width 60%

a,
button,
input,
textarea,
img
  outline 0

input,
button
  border-radius 0

img
  max-width 100%
  border none

button
  border none
  background none

h1,
h2,
h3,
h4,
h5,
h6,
p
  &:first-child
    margin-top 0

fieldset
  margin 0
  padding 0
  border none
